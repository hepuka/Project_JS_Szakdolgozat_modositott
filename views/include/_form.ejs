 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user col-md-6 m-auto">
        <div class="form-group">
            <label for="name" class="text-default">Név</label>
            <input type="hidden" name="id" class="form-control" value="">
            <input type="text" name="name" class="form-control" value="" placeholder="Add meg a teljes nevet!">
        </div>
        <div class="form-group">
            <label for="username" class="text-default">Felhasználónév</label>
            <input type="text" name="username" class="form-control" value="" placeholder="Adj meg egy felhasználónevet!">
        </div>
        <div class="form-group">
            <label for="email" class="text-default important">Email</label>
            <input type="text" name="email" class="form-control" value="" placeholder="valami@gmail.com">
        </div>
        <div class="form-group">
            <label for="role" class="text-default">Jogosultság</label>
            <input type="text" name="role" class="form-control" value="" placeholder="Admin vagy Alap">
        </div>
        <div class="form-group">
            <label for="password" class="text-default">Jelszó</label>
            <input type="text" name="password" class="form-control" value="" placeholder="Adj meg egy jelszavat!">
        </div>
        <div class="form-group">
            <label for="password2" class="text-default">Jelszó megerősítése</label>
            <input type="text" name="password2" class="form-control" value="" placeholder="Add meg a jelszavat újra!">
        </div>

              <div class="row justify-content-center">
                <button type="submit" class="btn btn-secondary col-md-4 update">Mentés</button>
              </div>
           
         
    </div>
</form>
