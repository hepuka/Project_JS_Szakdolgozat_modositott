
<%- include('include/_header.ejs') %>

 <main id="site-main">
    <div class="container">
        <div class="row">
            <div class="col-md-6 m-auto">
              <h3 class="text-center mb-3">
                Alkalmazott adatainak módosítása
              </h3>
            
        <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-dark">Név</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="name" class="form-control" value="<%= user.name %>">
        </div>
        <div class="form-group">
            <label for="username" class="text-dark">Felhasználónév</label>
            <input type="text" name="username" class="form-control" value="<%= user.username%>">
        </div>
        <div class="form-group">
            <label for="Email" class="text-dark">Email</label>
            <input type="text" name="email" class="form-control" value="<%= user.email%>">
        </div>
        <div class="form-group">
            <label for="role" class="text-dark">Jogosultság</label>
            <input type="text" name="role" class="form-control" placeholder="Admin vagy Alap" value="<%= user.role%>">
        </div>

              <div class="row justify-content-center">
                <button type="submit" class="btn btn-dark col-md-4 update">Mentés</button>               
                <button onclick="window.location.href='admin'"class="btn btn-dark col-md-4">Vissza</button>
              </div>
    </div>
</form>

</div>     
    </div>
</div>
</main>
